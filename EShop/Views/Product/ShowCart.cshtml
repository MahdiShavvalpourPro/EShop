@using EShop.Models.Entities
@model Order;
@{
    ViewData["Title"] = "سبد خرید";
}

<br />

@{
    if (Model!= null)
    {
        <table class="table table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>محصول</th>
                    <th>تعداد</th>
                    <th>قیمت</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model.OrderDetails)
                {
                    <tr>
                        <td>@item.Product.Name</td>
                        <td>@item.Count</td>
                        <td>@(item.Count * item.Price)</td>
                        <td>
                            <a class="btn btn-danger" asp-action="RemoveItemCart" asp-controller="Product" asp-route-detailId="@item.DetailId">
                                حذف
                            </a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>

        <h5> جمع کل : @Model.OrderDetails.Sum(s => s.Count * s.Price) تومان</h5>
    }
    else
    {
        <div class="alert alert-danger">فاکتوری نیست</div>
    }
}


